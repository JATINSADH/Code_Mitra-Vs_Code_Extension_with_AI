{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "outDir": "out",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "mocha"
    ]
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
