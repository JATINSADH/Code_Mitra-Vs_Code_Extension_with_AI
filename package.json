{
  "name": "code-mitra",
  "displayName": "Code-Mitra",
  "description": "Your AI Coding Partner directly in VS Code.",
  "version": "0.0.1",
  "publisher": "YourPublisherName",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:codeMitraView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-mitra-sidebar",
          "title": "Code-Mitra",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "code-mitra-sidebar": [
        {
          "id": "codeMitraView",
          "name": "Code-Mitra",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "20.2.5",
    "eslint": "^8.41.0",
    "typescript": "^5.1.3",
    "@types/mocha": "^10.0.1"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "axios": "^1.4.0"
  }
}
